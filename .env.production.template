# ==========================================
# SUPERSET PRODUCTION ENVIRONMENT CONFIG
# ==========================================

# 1. DOMAIN & SSL (Required for Caddy)
# ------------------------------------
DOMAIN_NAME=superset.example.com
TLS_EMAIL=admin@example.com

# 2. SECURITY KEYS (Required)
# ------------------------------------
# Generate with: openssl rand -base64 42
SUPERSET_SECRET_KEY=CHANGE_ME_TO_A_VERY_ALIGN_LONG_RANDOM_STRING
ADMIN_PASSWORD=strong_admin_password

# 3. DATABASE CONNECTION (Managed Postgres)
# ------------------------------------
# Example: postgresql://user:password@host:port/dbname
DATABASE_DIALECT=postgresql
DATABASE_USER=doadmin
DATABASE_PASSWORD=your_managed_db_password
DATABASE_HOST=your-db-host.ondigitalocean.com
DATABASE_PORT=25060
DATABASE_DB=superset
# POSTGRES_DB is used by some internal scripts, keep same as DATABASE_DB
POSTGRES_DB=superset

# 4. REDIS CONNECTION (Local Container)
# ------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CELERY_DB=0
REDIS_RESULTS_DB=1

# 5. WORKER SETTINGS
# ------------------------------------
CELERYD_CONCURRENCY=4

# 6. FEATURE FLAGS & SYSTEM
# ------------------------------------
SUPERSET_ENV=production
SUPERSET_LOAD_EXAMPLES=no
CYPRESS_CONFIG=false

# ==========================================
# BASECAMP AI CHATBOT CONFIG
# ==========================================

# 7. AUTH.JS SECRET (Required)
# ------------------------------------
# Generate with: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here

# 8. AI API KEYS
# ------------------------------------
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_key
AI_GATEWAY_API_KEY=your_vercel_ai_gateway_key

# 9. VERCEL BLOB STORAGE
# ------------------------------------
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token

# 10. CHATBOT DATABASE (Neon PostgreSQL)
# ------------------------------------
POSTGRES_URL=postgresql://user:password@host/dbname?sslmode=require

# 11. ANALYTICS WAREHOUSE (Neon Serverless)
# ------------------------------------
NEON_DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require
